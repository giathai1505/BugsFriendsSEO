<div class="container comment-section">
    <div class="d-flex justify-content-between">
        <h3><i class="fas fa-comment"></i> Bình luận</h3>
        <button type="button" class="btn btn-lg">Đăng nhập</button>
    </div>
    <div class="row comment-box">
        <div class="col-1">
            <div class="avatar-box"><i class="far fa-user"></i></div>
        </div>
        <div class="col ms-4">
            <div class="form-floating">
                <textarea
                    rows="4"
                    style="height: 100%"
                    class="form-control"
                    placeholder="Nhập nội dung bình luận tại đây"
                    id="floatingTextarea"
                ></textarea>
                <label for="floatingTextarea">Bình luận</label>
